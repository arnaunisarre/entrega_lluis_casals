<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arnau.loggindemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Juego.MainActivity" />
        <activity android:name=".Juego.SecondActivity" />
        <activity android:name=".Actllista" />
        <activity android:name=".Juego.llistaActivity" />
        <activity android:name=".Juego.MostrarObjeto" />

        <activity android:name=".Juego.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        android:screenOrientation="landscape"
        <activity android:name=".Juego.Pintarescenario"></activity>
        <activity android:name=".Proves"></activity>
        <activity android:name=".Juego.Preguntas"></activity>
    </application>

</manifest>